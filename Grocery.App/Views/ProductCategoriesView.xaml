<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.ProductCategoriesView"
             Title="{Binding CategoryName}">

    <CollectionView ItemsSource="{Binding Products}">
        <CollectionView.Header>
            <Grid Padding="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Product" Grid.Column="0" FontAttributes="Bold"/>
                <Label Text="Voorraad" Grid.Column="1" HorizontalTextAlignment="End" FontAttributes="Bold"/>
                <Label Text="Prijs (€)" Grid.Column="2" HorizontalTextAlignment="End" FontAttributes="Bold"/>
                <Label Text="THT datum" Grid.Column="3" HorizontalTextAlignment="End" FontAttributes="Bold"/>
            </Grid>
        </CollectionView.Header>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Text="{Binding Name}"/>
                    <Label Grid.Column="1" Text="{Binding Stock, StringFormat='{}{0:F0} op voorraad'}" HorizontalOptions="End"/>
                    <Label Grid.Column="2" Text="{Binding Price, StringFormat='€{0:N2}'}" HorizontalOptions="End"/>
                    <Label Grid.Column="3" Text="{Binding ShelfLife}" HorizontalOptions="End"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
